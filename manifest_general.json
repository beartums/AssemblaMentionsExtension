{
	"manifest_version": 2,

	"name": "Assembla Mentions",
	"description": "Assembla Mentions Badge and List",
	"short_name": "Assembla Mentions",
	"version": "1.2.0",
	"icons": {
		"16": "assembla-logo-shield-bleed-convos-16.png",
		"48": "assembla-logo-shield-bleed-convos-48.png",
		"128": "assembla-logo-shield-bleed-convos-128.png"
	},
	"options_ui": {
		"page": "assemblaOptions.html",
		"chrome_style": false
	},
	"background": {
		"page": "assemblaBackground.html"
	},
	"browser_action": {
		"default_icon": "assembla-logo-shield-bleed-convos-128.png",
		"default_popup": "assemblaPopup.html",
		"default_title": "Assembla Mentions"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"permissions": [
		"storage",
		"https://*.assembla.com/"
	]
}
